{
  "Resources": {
    "rSccaTgw": {
      "Type": "AWS::EC2::TransitGateway",
      "Properties": {
        "DefaultRouteTableAssociation": "disable",
        "DefaultRouteTablePropagation": "disable",
        "Tags": [
          {
            "Key": "Name",
            "Value": "scca-tgw"
          }
        ]
      },
      "Metadata": {
        "aws:cdk:path": "sccaTgwStack/rSccaTgw"
      }
    },
    "rSccaMainTgwRouteTable": {
      "Type": "AWS::EC2::TransitGatewayRouteTable",
      "Properties": {
        "TransitGatewayId": {
          "Ref": "rSccaTgw"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "scca-main-tgw-rt"
          }
        ]
      },
      "Metadata": {
        "aws:cdk:path": "sccaTgwStack/rSccaMainTgwRouteTable"
      }
    },
    "rSccaVdssTgwRouteTable": {
      "Type": "AWS::EC2::TransitGatewayRouteTable",
      "Properties": {
        "TransitGatewayId": {
          "Ref": "rSccaTgw"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "scca-vdss-tgw-rt"
          }
        ]
      },
      "Metadata": {
        "aws:cdk:path": "sccaTgwStack/rSccaVdssTgwRouteTable"
      }
    },
    "rSccaVdmsTgwRouteTable": {
      "Type": "AWS::EC2::TransitGatewayRouteTable",
      "Properties": {
        "TransitGatewayId": {
          "Ref": "rSccaTgw"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "scca-vdms-tgw-rt"
          }
        ]
      },
      "Metadata": {
        "aws:cdk:path": "sccaTgwStack/rSccaVdmsTgwRouteTable"
      }
    }
  },
  "Outputs": {
    "StackName": {
        "Value": {
            "Ref": "AWS::StackName"
        },
        "Export": {
          "Name" : {"Fn::Sub": "${AWS::StackName}-StackName" }
        }
    },
    "SccaTgwId": {
      "Value": {
        "Ref": "rSccaTgw"
      },
      "Export": {
        "Name" : {"Fn::Sub": "${AWS::StackName}-SccaTgwId" }
      }
    },
    "SccaMainTgwRouteTableId": {
      "Value": {
        "Ref": "rSccaMainTgwRouteTable"
      },
      "Export": {
        "Name" : {"Fn::Sub": "${AWS::StackName}-SccaMainTgwRouteTableId" }
      }
    },
    "SccaVdssTgwRouteTableId": {
      "Value": {
        "Ref": "rSccaVdssTgwRouteTable"
      },
      "Export": {
        "Name" : {"Fn::Sub": "${AWS::StackName}-SccaVdssTgwRouteTableId" }
      }
    },
    "SccaVdmsTgwRouteTableId": {
      "Value": {
        "Ref": "rSccaVdmsTgwRouteTable"
      },
      "Export": {
        "Name" : {"Fn::Sub": "${AWS::StackName}-SccaVdmsTgwRouteTableId" }
      }
    }
  }
}